docker.enabled = false
singularity.enabled = true 

process {
    resourceLimits = [
        memory: 2.9.TB,
        cpus: 256,
        time: 43200.min
        ]
    memory = '8GB'
    cpu = 1
    executor = 'lsf'
    errorStrategy = { task.exitStatus in ((130..145) + 104 ) ? 'retry' : 'finish' }
    maxRetries = 3
    queue = {
        if ( task.time >= 15.day ) {
            if ( task.memory > 680.GB ) {
                error "There is no queue for jobs that need >680 GB and >15 days"
            } else {
                "basement"
            }
        } else if ( task.memory > 720.GB ) {
            "teramem"
        } else if ( task.memory > 350.GB ) {
            "hugemem"
        } else if ( task.time > 7.day ) {
            "basement"
        } else if ( task.time > 2.day ) {
            "week"
        } else if ( task.time > 12.hour ) {
            "long"
        } else if ( task.time > 1.min ) {
            "normal"
        } else {
            "small"
        }
    }
    withName: MutMatrix_resourcereqs {
        cpus   = { 1                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : (1.GB)  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
     }
    withName: HDP_flat_prior {
        cpus   = { 20                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: HDP_flat_noprior {
        cpus   = { 20                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: HDP_single_prior {
        cpus   = { 20                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: HDP_single_noprior {
        cpus   = { 20                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: HDP_double_prior {
        cpus   = { 20                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: HDP_double_noprior {
        cpus   = { 20                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: HDP_combine {
        cpus   = { 1                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : "${Memory_required}.GB"  } 
        time   = { task.attempt == 1 ? 7.day : 30.day } 
    }
    withName: SigProfilerAssignment {
        cpus   = { 1                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : (5.GB)  }
        time   = { task.attempt == 1 ? 7.day : 30.day }
    }
    withName: SigProfilerPlotting {
        cpus   = { 1                   }
        memory = { task.attempt > 1 ? task.previousTrace.memory * 2 : (5.GB)  }
        time   = { task.attempt == 1 ? 7.day : 30.day }
    }
}

executor {
    name = 'lsf'
    perJobMemLimit = true
    poolSize = 4
    submitRateLimit = '10 sec'
    killBatchSize = 50
    queueSize = 4000
}